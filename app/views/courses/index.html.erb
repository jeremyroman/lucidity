<% page_title "Courses" %>

<p><%= link_to "New Course", new_course_path %></p>

<table>
  <% for course in @courses -%>
    <tr>
      <td><%= link_to h(course.code), course %></td>
      <td><%=h course.name %></td>
      <td>
        <%= link_to "Edit", edit_course_path(course) %> |
        <%= link_to "Delete", course, :method => :delete, :confirm => "Are you sure?" %>
      </td>
    </li>
  <% end -%>
</table>
