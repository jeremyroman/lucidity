<!DOCTYPE html>
<html>
<head>
  <title>Lucidity</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;"/>
	<meta name="apple-mobile-web-app-capable" content="yes"/>
	<link rel="apple-touch-startup-image" href="/startup-320x460.png"/>
	<script type="text/javascript">
	  $(function() {
	    $(".course").each(function() { $(this).attr("title", this.innerText); });
	    $(".term").sortable({
	      connectWith:'.term',
	      items:'.course'
	    }).disableSelection();
	    $(".search .course").draggable({ helper:'clone', connectToSortable:'.term' }).disableSelection();
	  });
	</script>
</head>
<body>

<header>
  <h1>Lucidity</h1>
  <p class="user">
    Logged in as: <strong><%= session[:cas_user] %></strong>
    <%= link_to "Logout", logout_path %>
  </p>
</header>

<%= yield %>

</body>
</html>
